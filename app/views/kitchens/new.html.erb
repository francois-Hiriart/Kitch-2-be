<div class="container pt-4 d-flex justify-content-center">
  <div class="card p-3 justify-content-center" style="width: 50rem;">
    <div class="card-body">
      <h2 style="color: #FF6713"><center>Enregistrer ma Kitchen</center></h2>

      <%= simple_form_for @kitchen do |f| %>
      <div class="row">
        <div class="col-md-6">
          <%= f.input :name, label:'Nom' %>
        </div>
        <div class="col-md-6">
          <%= f.input :location, label:'Adresse'%>
        </div>
      </div>

      <div class="row">
        <div class="col-md-6">
          <%= f.input :equipments, label:'Liste des équipements' %>
        </div>
        <div class="col-md-3">
          <%= f.input :price, label:'Prix en €' %>
        </div>
        <div class="col-md-3">
          <%= f.input :size, label:'Superficie en m²' %>
        </div>
      </div>
        <%= f.input :availability, label:'Cochez si Kitchen disponible' %>
        <%= f.input :description %>
        <%= f.input :picture, as: :file, class: "btn btn-outline-primary me-2", label:'Insérer les photos' %>
        <%= f.button :submit, "Enregistrer", class: 'btn btn-primary' %>
        <%= link_to "Revenir aux resultats", kitchens_path, class: "btn btn-outline-primary me-2" %>
      <% end %>

    </div>
  </div>
</div>
