<div class="main-container">

  <div class="book-container">
    <div class="show-title">
      <h2>Ma réservation</h2>
      <%= link_to bookings_path do %>
        <button class="btn btn-principal btn-margin-top">Toutes mes réservations</button>
      <% end %>
    </div>


  <% if @booking.user == current_user %>
    <div class="book-content">
      <div class="book-info">
        <h3><%= @kitchen.location %></h3>
        <div class="book-date">
          <h5>Réservé :</h5>
          <h5>Du <%= @booking.start_date.strftime('%e %B %Y')%></h5>
          <h5>Au <%= @booking.end_date.strftime('%e %B %Y')%></h5>
        </div>
        <div class="book-price">
          <h3>Prix total : <%= @total_price %> €</h3>
        </div>
      </div>
    </div>
    <div class="book-description">
      <li><%= @kitchen.description %></li>
    </div>
  </div>
</div>
<% else "Vous n'avez pas de réservation en cours" %>
<% end %>

 <div class="flat-card-actions">
   <%= render 'reviews/form', review: @review, kitchen: @booking, text: "laisser un commentaire" %>
 </div>

