<div class="container pt-4 col d-flex justify-content-center">
  <div class="card p-3 justify-content-center" style="width: 25rem;">
    <div class="card-body">
      <h2 style="color: #FF6713"><center>Mot de passe oubliÃ© ?</center></h2>

        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Envoyez moi les instructions", class:"w-100 mb-2 btn btn-primary"%>
          </div>
        <% end %>

    </div>
  </div>
</div>