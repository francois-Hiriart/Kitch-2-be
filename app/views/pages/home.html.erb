<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1556911261-6bd341186b2f?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80);">
  <h1 class="card-title p-2 text-center" style="color: white"><b>Réservez votre cuisine et des activités uniques</h2></b><br>
  <div class="container justify-content-center">
    <div class="card">
      <div class="card-body">

          <%= simple_form_for :kitchens_filter, url: kitchens_path, method: "GET" do |f| %>
            <div class="row">
              <div class="col-md-3">
                <%= f.input :location, label: false,
                                        input_html: { placeholder: "Localisation" } %>
              </div>
              <div class="col-md-2">
                <%= f.input :start_date, label: false, html5: true,
                                        input_html: { type: :date } %>
              </div>

              <div class="col-md-2">
                <%= f.input :end_date, label: false, html5: true,
                                        input_html: { type: :date } %>
              </div>
              <div class="col-md-2">
                <%= f.input :min_price, label: false,
                                        input_html: { type: :number,
                                                      min: "0",
                                                      placeholder: "Prix min" } %>
              </div>
              <div class="col-md-2">
                <%= f.input :max_price, label: false,
                                        input_html: { type: :number,
                                                      min: "0",
                                                      placeholder: "Prix max" } %>
              </div>
              <div class="col-md-1">
                <%= button_tag(type: "submit", class: "btn btn-primary") do %>
                  <span><i class="fas fa-search"></i></span>
                <% end %>
              </div>

            </div>
          <% end %>

      </div>

    </div>
  </div>
</div>

